package com.example.demo.controllers;

import com.example.demo.entities.Proyecto;
import com.example.demo.entities.Tarea;
import com.example.demo.services.ProyectoService;
import com.example.demo.services.TareaService;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.*;
import java.util.List;

@Controller
@RequestMapping("/proyectos")
public class ProyectoController {
    @Autowired
    private ProyectoService proyectoService;

    @GetMapping
    public String listarProyectos(Model model) {
        model.addAttribute("proyectos", proyectoService.listarProyectos());
        return "proyectos"; // ‚úÖ Asegura que existe "proyectos.html"
    }

    @GetMapping("/nuevo")
    public String mostrarFormularioCreacion(Model model) {
        model.addAttribute("proyecto", new Proyecto()); // ‚úÖ Enviamos un objeto vac√≠o
        return "crearProyecto"; // ‚úÖ Asegura que existe "crearProyecto.html"
    }

    @PostMapping
    public String crearProyecto(@ModelAttribute Proyecto proyecto) {
        System.out.println("Recibiendo proyecto: " + proyecto.getNombre()); // üîç Para depurar
        proyectoService.guardarProyecto(proyecto);
        return "redirect:/proyectos";
    }
}
